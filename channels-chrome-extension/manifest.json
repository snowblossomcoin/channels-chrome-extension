{
    "manifest_version": 2,
    "name": "Snowblossom Channels",
    "version": "0.1",
    "description": "Snowblossom Channels Extension",
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png",
        "256": "icons/icon256.png"
    },
    "options_page": "options/options.html",
    "page_action": { "default_popup": "popup/popup.html" },
    "background": { "scripts": ["background.js"], "persistent": false },
    "permissions": ["declarativeContent", "storage", "proxy"]
}
